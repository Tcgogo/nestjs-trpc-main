{
  "name": "nestjs-server",
  "version": "1.0.0",
  "description": "nestjs trpc server",
  "author": "Tcgogo",
  "license": "MIT",
  "type": "module",
  "bugs": {
    "url": "https://github.com/Tcgogo/nestjs-trpc-main/issues"
  },
  "homepage": "https://github.com/Tcgogo/nestjs-trpc-main#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tcgogo/nestjs-trpc-main.git"
  },
  "keywords": [
    "typescript",
    "nestjs",
    "trpc"
  ],
  "engines": {
    "node": ">=22.x",
    "pnpm": ">=9.x"
  },
  "packageManager": "pnpm@9.14.2",
  "main": "dist/main.js",
  "scripts": {
    "serve": "cp ../../.npmrc .npmrc && docker-compose build --no-cache nestjs-server-dev",
    "build": "node --run build:clean && nest build --path tsconfig.build.json",
    "start": "node dist/main.js",
    "dev": "nest start --watch --debug=0.0.0.0:9229",
    "test": "rimraf coverage .nyc_output && concurrently 'node --run test:unit' 'node --run test:e2e' && node --run calculate-global-test-coverage",
    "test:unit": "vitest run --coverage --config vitest.config.unit.ts",
    "test:e2e": "vitest run --coverage --config ./vitest.config.e2e.ts",
    "test:performance": "k6 run tests/performance/contexts/users/get-users.mjs",
    "calculate-global-test-coverage": "tsx scripts/calculate-global-test-coverage.ts",
    "prepare": "[ -f .husky/install.mjs ] && node .husky/install.mjs || true",
    "lint": "eslint --ignore-path .gitignore . --ext .js,.mjs,cjs,.ts,.mts",
    "lint:fix": "eslint --ignore-path .gitignore . --ext .js,.mjs,cjs,.ts,.mts --fix",
    "lint:file": "eslint --ignore-path .gitignore",
    "lint:yaml": "chmod +x scripts/lint_yaml.sh && ./scripts/lint_yaml.sh",
    "build:clean": "rimraf dist; exit 0",
    "typos": "chmod +x scripts/check_typos.sh && ./scripts/check_typos.sh"
  },
  "dependencies": {
    "@nestjs/cli": "catalog:",
    "@nestjs/common": "catalog:",
    "@nestjs/config": "catalog:",
    "@nestjs/core": "catalog:",
    "@nestjs/mapped-types": "catalog:",
    "@nestjs/platform-fastify": "catalog:",
    "@nestjs/typeorm": "catalog:",
    "@trpc/server": "catalog:",
    "class-transformer": "catalog:",
    "class-validator": "catalog:",
    "reflect-metadata": "catalog:",
    "rxjs": "catalog:",
    "glob": "catalog:",
    "lodash-es": "catalog:",
    "mysql2": "catalog:",
    "nestjs-trpc-adapter": "workspace:*",
    "typeorm": "catalog:",
    "typeorm-naming-strategies": "catalog:",
    "yaml": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "@commitlint/types": "catalog:",
    "@nestjs/schematics": "catalog:",
    "@nestjs/testing": "catalog:",
    "@swc/cli": "catalog:",
    "@swc/core": "catalog:",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash-es": "catalog:",
    "@types/node": "catalog:",
    "@types/supertest": "catalog:",
    "@typescript-eslint/eslint-plugin": "catalog:",
    "@typescript-eslint/parser": "catalog:",
    "@vitest/coverage-istanbul": "catalog:",
    "concurrently": "catalog:",
    "copyfiles": "catalog:",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "eslint-plugin-node": "catalog:",
    "eslint-plugin-prettier": "catalog:",
    "eslint-plugin-simple-import-sort": "catalog:",
    "eslint-plugin-unicorn": "catalog:",
    "eslint-plugin-vitest": "catalog:",
    "fs-extra": "catalog:",
    "husky": "catalog:",
    "lint-staged": "catalog:",
    "nock": "catalog:",
    "nyc": "catalog:",
    "prettier": "catalog:",
    "rimraf": "catalog:",
    "source-map-support": "catalog:",
    "supertest": "catalog:",
    "ts-loader": "catalog:",
    "ts-node": "catalog:",
    "tsconfig-paths": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "unplugin-swc": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:",
    "vitest-mock-extended": "catalog:"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "catalog:",
    "@swc/core-linux-arm64-musl": "catalog:",
    "@swc/core-linux-x64-gnu": "catalog:",
    "@swc/core-linux-x64-musl": "catalog:"
  }
}
