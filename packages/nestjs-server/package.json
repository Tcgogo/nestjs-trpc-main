{
  "name": "nestjs-server",
  "version": "1.0.0",
  "description": "nestjs trpc server",
  "author": "Tcgogo",
  "license": "MIT",
  "type": "module",
  "bugs": {
    "url": "https://github.com/Tcgogo/nestjs-trpc-main/issues"
  },
  "homepage": "https://github.com/Tcgogo/nestjs-trpc-main#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tcgogo/nestjs-trpc-main.git"
  },
  "keywords": [
    "typescript",
    "nestjs",
    "trpc"
  ],
  "engines": {
    "node": ">=22.x",
    "pnpm": ">=9.x"
  },
  "packageManager": "pnpm@9.14.2",
  "main": "dist/main.js",
  "scripts": {
    "serve": "cp ../../.npmrc .npmrc && docker-compose build --no-cache nestjs-server-dev",
    "build": "node --run build:clean && nest build --path tsconfig.build.json",
    "start": "node dist/main.js",
    "dev": "nest start --watch --debug=0.0.0.0:9229",
    "test": "rimraf coverage .nyc_output && concurrently 'node --run test:unit' 'node --run test:e2e' && node --run calculate-global-test-coverage",
    "test:unit": "vitest run --coverage --config vitest.config.unit.ts",
    "test:e2e": "vitest run --coverage --config ./vitest.config.e2e.ts",
    "test:performance": "k6 run tests/performance/contexts/users/get-users.mjs",
    "calculate-global-test-coverage": "tsx scripts/calculate-global-test-coverage.ts",
    "prepare": "[ -f .husky/install.mjs ] && node .husky/install.mjs || true",
    "lint": "eslint --ignore-path .gitignore . --ext .js,.mjs,cjs,.ts,.mts",
    "lint:fix": "eslint --ignore-path .gitignore . --ext .js,.mjs,cjs,.ts,.mts --fix",
    "lint:file": "eslint --ignore-path .gitignore",
    "lint:yaml": "chmod +x scripts/lint_yaml.sh && ./scripts/lint_yaml.sh",
    "build:clean": "rimraf dist; exit 0",
    "typos": "chmod +x scripts/check_typos.sh && ./scripts/check_typos.sh"
  },
  "dependencies": {
    "@nestjs/cli": "^10.4.5",
    "@nestjs/common": "^10.4.6",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.6",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-fastify": "^10.4.6",
    "@nestjs/typeorm": "^11.0.0",
    "@trpc/server": "10.18.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "reflect-metadata": "0.1.13",
    "rxjs": "^7.8.1",
    "glob": "^11.0.1",
    "lodash-es": "^4.17.21",
    "mysql2": "^3.12.0",
    "nestjs-trpc": "^1.6.1",
    "nestjs-trpc-adapter": "workspace:*",
    "typeorm": "^0.3.20",
    "typeorm-naming-strategies": "^4.1.0",
    "yaml": "^2.7.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@commitlint/types": "^19.5.0",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.6",
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.7.42",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.8.7",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/coverage-istanbul": "1.3.1",
    "concurrently": "^9.0.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^56.0.0",
    "eslint-plugin-vitest": "^0.4.1",
    "fs-extra": "^11.2.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "nock": "^13.5.5",
    "nyc": "^17.1.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "unplugin-swc": "^1.5.1",
    "vite": "^5.4.10",
    "vitest": "^1.3.1",
    "vitest-mock-extended": "^1.3.1"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.24.3",
    "@swc/core-linux-arm64-musl": "^1.7.42",
    "@swc/core-linux-x64-gnu": "^1.7.42",
    "@swc/core-linux-x64-musl": "^1.7.42"
  }
}
