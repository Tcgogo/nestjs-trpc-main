{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "incremental": false,
    "declarationMap": true,
    "noImplicitAny": false,
    "importHelpers": true,
    "esModuleInterop": true,
    "removeComments": false,
    "noLib": false,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "target": "ES2021",
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "types": ["node"],
    "experimentalDecorators": true
  },
  "files": [],
  "include": [],
  "references": [
    {
      "path": "./tsconfig.build.json"
    }
  ]
}